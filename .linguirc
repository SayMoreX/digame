{
    "catalogs": [
        {
            "path": "./locale/{locale}/messages",
            "include": [
                "<rootDir>/app/"
            ],
            "exclude": [
                "/node_modules/",
                "/app/*.bundle.js",
                "<rootDir>/app/main-bundle.js",
                "<rootDir>/app/dist/**"
            ]
        }
    ],
    "format": "po",
    "locales": ["en","es","id","ps","pt-BR","ru","fr", "fa","zh-cn"], 
    "sourceLocale": "en-code",
    "pseudoLocale": "ps",
    "extractBabelOptions": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ]
    },
    "compilerBabelOptions": {
        "jsescOption": {
            "minimal": false
        }
    }
}