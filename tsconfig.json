{
  "compilerOptions": {
    "paths": {
      "package.json": [
        "./package.json"
      ]
    },
    "skipLibCheck": true, //needed to get fork-ts-checker-webpack-plugin to work
    "moduleResolution": "node",
    "module": "ESNext",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "target": "ES2020",
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost",
      "ES2020"
    ],
    "types": [
      "jest",
      "node",
      "vite/client", // Vite-injected env variables , Asset imports
      "@emotion/react/types/css-prop"
    ],
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "useDefineForClassFields": true, //mobx 6
    //"experimentalDecorators": true,
    //"emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "plugins": [
      {
        "name": "typescript-styled-plugin", // adds intellisense for css / emotion
        "lint": {
          "validProperties": [
            "label"
          ]
        }
      }
    ]
  },
  "files": [
    "src/index.tsx",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}